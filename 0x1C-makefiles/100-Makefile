CC = gcc
SRC = main.c school.c
OBJ := $(SRC:%.c=%.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

COMPILER = $(CC)

all: $(OBJ)
	$(COMPILER) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean 

re: oclean all 

%.o: %.c
	$(COMPILER) $(CFLAGS) -c -o %.o %.c
