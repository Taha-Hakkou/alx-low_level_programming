CC = gcc
SRC = main.c school.c
OBJ = $(SRC:%.c=%.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

COMPILER = $(CC)

%.o: %.c
	$(COMPILER) $(CFLAGS) -c -o $@ $<

all: $(OBJ)
	$(COMPILER) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean 

re: oclean all
