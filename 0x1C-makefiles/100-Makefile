CC = gcc
SRC = main.c school.c
OBJ = main.o school.o
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

COMPILER = $(CC)

all: $(OBJ)
	$(COMPILER) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean 

re: oclean all 

main.o: main.c
	$(COMPILER) $(CFLAGS) -c -o main.o main.c

school.o: school.c
	$(COMPILER) $(CFLAGS) -c -o school.o school.c
